<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorMedium</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey300</item>
        <!--<item name="android:statusBarColor">@color/white</item>-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@string/drawable_background_splash</item>
        <item name="android:statusBarColor">@string/statusbar_color</item>
    </style>

</resources>
