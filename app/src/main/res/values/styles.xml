<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textColorError">@color/red</item>
        <item name="colorGreen">@color/green</item>
        <item name="colorRed">@color/red</item>
        <item name="colorPending">@color/pending</item>
        <item name="colorWithdrawing">@color/withdrawing</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorBackground">@color/darkBackground</item>
        <item name="colorBackgroundAlpha0">@color/darkBackgroundAlpha0</item>
        <item name="colorBackgroundDark">@color/darkBackgroundDark</item>
        <item name="colorCard">@color/darkCard</item>
        <item name="colorCardAlpha0">@color/darkCardAlpha0</item>
        <item name="colorDelimiter">@color/darkDelimiter</item>
        <item name="colorDelimiterLight">@color/darkDelimiterLight</item>
        <item name="colorTextPrimary">@color/darkTextPrimary</item>
        <item name="colorTextSecondary">@color/darkTextSecondary</item>
    </style>

    <style name="AppTheme.Base.Light" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="colorBackground">@color/lightBackground</item>
        <item name="colorBackgroundAlpha0">@color/lightBackgroundAlpha0</item>
        <item name="colorBackgroundDark">@color/lightBackgroundDark</item>
        <item name="colorCard">@color/lightCard</item>
        <item name="colorCardAlpha0">@color/lightCardAlpha0</item>
        <item name="colorDelimiter">@color/lightCard</item>
        <item name="colorDelimiterLight">@color/lightDelimiterLight</item>
        <item name="colorTextPrimary">@color/lightTextPrimary</item>
        <item name="colorTextSecondary">@color/lightTextSecondary</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorMedium</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey300</item>
        <item name="textColorError">@color/transactionRed</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@string/drawable_background_splash</item>
    </style>


    <style name="SwipeBackActivityTheme" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SwipeBackActivityTheme.Light" parent="AppTheme.Base.Light">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SwipeBackActivityTheme.Dark" parent="AppTheme.Base.Dark">
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="TranslucentActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="item_investment_program_footer_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black38</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="item_investment_program_currency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/currency_background</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="profile_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_item_height</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="profile_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="profile_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/divider_dot_horizontal</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="program_details_data_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="program_details_data_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="program_details_data_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="program_details_data_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/divider_dot_horizontal</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="AppTheme.KeyboardButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_keyboard</item>
        <item name="android:textColor">@color/colorFontDark</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.KeyboardButton.Number" parent="AppTheme.KeyboardButton">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTheme.KeyboardButton.Backspace" parent="AppTheme.KeyboardButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProfileHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="trades_header_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="trades_header_text_stacked" parent="trades_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="chart_zoom_button_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="chart_zoom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="chart_zoom_button_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/time_frame_underline</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tooltip_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:src">@drawable/ic_help_black_24dp</item>
        <item name="android:tint">@color/grey300</item>
    </style>

    <style name="dialog_slide_animation">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>

    <style name="dialog_top_left_animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_top_left</item>
        <item name="android:windowExitAnimation">@anim/fade_out_top_left</item>
    </style>

    <style name="check_tfa_code_number">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">72sp</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:tint">?attr/colorTextPrimary</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.PinButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="dashboard_header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dashboard_header_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dashboard_header_secondary_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dashboard_header_change_percent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">?attr/colorGreen</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="statistics_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="statistics_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">0.4</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="statistics_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="program_info_invest_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="program_info_invest_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.4</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="confirmation_dialog_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:alpha">0.4</item>
        <item name="android:textColor">?attr/colorCard</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="confirmation_dialog_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">?attr/colorCard</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
