<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SwipeBackActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="item_investment_program_footer_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/colorFontLight</item>
    </style>

    <style name="item_investment_program_footer_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="item_investment_program_footer_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="item_investment_program_footer_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_investment_program_currency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/currency_background</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="filters_item_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/filters_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorFontMedium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="filters_item_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/filters_item_height</item>
    </style>

    <style name="filters_range_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="mrb_barWeight">6dp</item>
        <item name="mrb_connectingLineColor">@color/colorPrimary</item>
        <item name="mrb_connectingLineWeight">6dp</item>
        <item name="mrb_pinColor">@color/colorPrimary</item>
        <item name="mrb_pinMaxFont">14sp</item>
        <item name="mrb_pinPadding">6dp</item>
        <item name="mrb_rangeBarColor">@color/grey300</item>
        <item name="mrb_selectorColor">@color/colorPrimary</item>
        <item name="mrb_selectorSize">6dp</item>
        <item name="mrb_temporaryPins">false</item>
        <item name="mrb_tickColor">@color/colorPrimary</item>
    </style>

    <style name="profile_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorFontMedium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="profile_item_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFontDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="program_details_data_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="program_details_data_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="program_details_data_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="program_details_data_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/divider_dot_horizontal</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="program_description_delimiter">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/divider_dot_horizontal</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="AppTheme.KeyboardButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_keyboard</item>
        <item name="android:textColor">@color/colorFontDark</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.KeyboardButton.Number" parent="AppTheme.KeyboardButton">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTheme.KeyboardButton.Backspace" parent="AppTheme.KeyboardButton">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
