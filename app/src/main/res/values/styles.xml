<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorMedium</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey300</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@string/drawable_background_splash</item>
    </style>

    <style name="SwipeBackActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TranslucentActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="item_investment_program_footer_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black38</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="item_investment_program_currency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/currency_background</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="profile_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_item_height</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="profile_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="profile_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/divider_dot_horizontal</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="program_details_data_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="program_details_data_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="program_details_data_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="program_details_data_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/divider_dot_horizontal</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="AppTheme.KeyboardButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_keyboard</item>
        <item name="android:textColor">@color/colorFontDark</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.KeyboardButton.Number" parent="AppTheme.KeyboardButton">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTheme.KeyboardButton.Backspace" parent="AppTheme.KeyboardButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProfileHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="trades_header_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="trades_header_text_stacked" parent="trades_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="chart_zoom_button_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="chart_zoom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/grey400</item>
    </style>

    <style name="chart_zoom_button_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tooltip_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:src">@drawable/ic_help_black_24dp</item>
        <item name="android:tint">@color/grey300</item>
    </style>

    <style name="dialog_slide_animation">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>

    <style name="check_tfa_code_number">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">72sp</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:tint">@color/colorMedium</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorMedium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.PinButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>
</resources>
