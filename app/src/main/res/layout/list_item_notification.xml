<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/program_details_padding_left"
                android:paddingTop="@dimen/program_details_padding_left">

    <RelativeLayout
        android:id="@+id/group_icons"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/icon_notification_star"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/not_read"
            android:layout_width="@dimen/toolbar_dot_width"
            android:layout_height="@dimen/toolbar_dot_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:placeholderImage="?attr/colorRed"
            app:roundAsCircle="true"
            tools:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/group_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/program_details_padding_left"
        android:layout_marginStart="@dimen/program_details_padding_left"
        android:layout_toEndOf="@+id/group_icons"
        android:layout_toRightOf="@+id/group_icons"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/program_details_padding_left"
            android:layout_marginRight="@dimen/program_details_padding_left"
            android:ellipsize="end"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="16sp"
            tools:text="BlockChainTrader invest request added"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="14sp"
                tools:text="10:30am"/>

            <TextView
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                tools:text="Get verified >"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:alpha="0.5"
            android:background="?attr/colorDelimiterLight"/>

    </LinearLayout>

</RelativeLayout>