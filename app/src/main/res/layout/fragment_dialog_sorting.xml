<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/fragment_dialog_sorting_width"
        android:layout_height="@dimen/fragment_dialog_sorting_height"
        android:background="@drawable/background_dialog">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/text_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/sort_by"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/group_direction"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/direction_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/icon_sorting_high_to_low"/>

                <TextView
                    android:id="@+id/direction_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="@string/high_to_low"
                    android:textColor="?attr/colorTextPrimary"
                    android:textSize="14sp"/>

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttons_group"
            android:layout_below="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/profit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/profit_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/level_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/end_of_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/end_of_period_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/equity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/equity_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/size_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/title_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/subscribers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/subscribers_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/investors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/investors_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/drawdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/drawdown_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/asset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/asset_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/name_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/price_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/change_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/market_cap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/market_cap_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

                <vision.genesis.clientapp.feature.main.filters.sorting.SortingOptionView
                    android:id="@+id/volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/volume_delimiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:background="?attr/colorDelimiterLight"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/buttons_group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/cancel"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/button_apply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/apply"
                android:textColor="?attr/colorAccent"
                android:textSize="13sp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>