<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20dp"
            android:tint="?attr/colorTextPrimary"
            app:srcCompat="@drawable/icon_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/about_levels"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                style="@style/about_levels_point_text"
                android:alpha="0.8"
                android:text="@string/about_levels_text_main"/>

            <TextView
                android:id="@+id/formula"
                style="@style/about_levels_point_text"
                android:layout_marginTop="20dp"
                android:alpha="1"
                android:text="@string/about_levels_text_formula"
                android:textSize="18sp"/>

            <TextView
                style="@style/about_levels_point_text"
                android:layout_marginTop="20dp"
                android:alpha="0.8"
                android:text="@string/about_levels_text_below_formula"/>

            <LinearLayout
                style="@style/about_levels_point_group">

                <TextView
                    android:id="@+id/point_1"
                    style="@style/about_levels_point_number"
                    android:text="1."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_1"
                        style="@style/about_levels_point_text"
                        android:alpha="0.9"
                        android:text="@string/about_levels_text_1_title"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/about_levels_point_group">

                <TextView
                    android:id="@+id/point_2"
                    style="@style/about_levels_point_number"
                    android:text="2."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_2"
                        style="@style/about_levels_point_text"
                        android:alpha="0.9"
                        android:text="@string/about_levels_text_2_title"/>

                    <TextView
                        style="@style/about_levels_point_text"
                        android:layout_marginTop="8dp"
                        android:text="@string/about_levels_text_2"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/about_levels_point_group">

                <TextView
                    android:id="@+id/point_3"
                    style="@style/about_levels_point_number"
                    android:text="3."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_3"
                        style="@style/about_levels_point_text"
                        android:alpha="0.9"
                        android:text="@string/about_levels_text_3_title"/>

                    <TextView
                        style="@style/about_levels_point_text"
                        android:layout_marginTop="8dp"
                        android:text="@string/about_levels_text_3"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/notes"
                style="@style/about_levels_point_text"
                android:layout_marginTop="20dp"
                android:alpha="0.9"
                android:text="@string/about_levels_notes"/>

            <LinearLayout
                style="@style/about_levels_point_group">

                <TextView
                    style="@style/about_levels_point_number"
                    android:text="&#8226;"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/about_levels_point_text"
                        android:alpha="0.9"
                        android:text="@string/about_levels_notes_1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/about_levels_point_group">

                <TextView
                    style="@style/about_levels_point_number"
                    android:text="&#8226;"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/about_levels_point_text"
                        android:alpha="0.9"
                        android:text="@string/about_levels_notes_2"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/more"
                style="@style/about_levels_point_text"
                android:layout_marginTop="20dp"
                android:alpha="0.9"
                android:text="@string/about_levels_more"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/background_levels_limits"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/levels_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/levels_limits"
                        android:textColor="?attr/colorTextPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/group_currency"
                        android:alpha="0.4"
                        android:text="@string/show_in"
                        android:textColor="?attr/colorTextPrimary"
                        android:textSize="13sp"/>

                    <RelativeLayout
                        android:id="@+id/group_currency"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@drawable/background_select_currency"
                            android:tint="?attr/colorCard"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/btc"
                                android:textColor="?attr/colorTextPrimary"
                                android:textSize="13sp"/>

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="2dp"
                                android:alpha="0.3"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:id="@+id/group_levels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        style="@style/levels_limits_group_main"
                        android:layout_marginTop="24dp">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level1"/>

                            <TextView
                                android:id="@+id/level_1"
                                style="@style/levels_limits_level"
                                android:text="1"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_1"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/levels_limits_group_main">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level2"/>

                            <TextView
                                android:id="@+id/level_2"
                                style="@style/levels_limits_level"
                                android:text="2"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_2"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/levels_limits_group_main">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level3"/>

                            <TextView
                                android:id="@+id/level_3"
                                style="@style/levels_limits_level"
                                android:text="3"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_3"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/levels_limits_group_main">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level4"/>

                            <TextView
                                android:id="@+id/level_4"
                                style="@style/levels_limits_level"
                                android:text="4"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_4"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/levels_limits_group_main">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level5"/>

                            <TextView
                                android:id="@+id/level_5"
                                style="@style/levels_limits_level"
                                android:text="5"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_5"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/levels_limits_group_main">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level6"/>

                            <TextView
                                android:id="@+id/level_6"
                                style="@style/levels_limits_level"
                                android:text="6"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_6"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/levels_limits_group_main">

                        <RelativeLayout
                            style="@style/levels_limits_group_level">

                            <ImageView
                                style="@style/levels_limits_level_background"
                                android:tint="@color/level7"/>

                            <TextView
                                android:id="@+id/level_7"
                                style="@style/levels_limits_level"
                                android:text="7"/>

                        </RelativeLayout>

                        <LinearLayout
                            style="@style/levels_limits_group_limit">

                            <TextView
                                style="@style/levels_limits_invest_limit_label"/>

                            <TextView
                                android:id="@+id/limit_7"
                                style="@style/levels_limits_invest_limit"
                                tools:text="1000 GVT"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>