<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:gravity="center"
                android:alpha="0.9"
                android:text="@string/please_read_carefully"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alpha="0.4"
                android:gravity=""
                android:lineSpacingMultiplier="1.2"
                android:text="@string/successfully_set_up_tfa"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alpha="0.4"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/recovery_codes_below"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_left_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.9"
                    android:gravity="center_horizontal"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="?attr/colorTextPrimary"
                    android:textSize="18sp"
                    tools:text="098 654\n276 543\n276 543"/>

                <TextView
                    android:id="@+id/text_right_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.9"
                    android:gravity="center_horizontal"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="?attr/colorTextPrimary"
                    android:textSize="18sp"
                    tools:text="098 654\n276 543"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alpha="0.4"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/tfa_warning"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="14sp"/>

            <vision.genesis.clientapp.ui.PrimaryButton
                android:id="@+id/button_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="20dp"
                android:text="@string/ok_i_understand"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>