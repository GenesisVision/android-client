<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottomsheet"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding">

        <View
            android:layout_width="45dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/line_bottomsheet"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/close_position"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="18sp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/symbol"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/symbol"
                        android:textColor="?attr/colorTextSecondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="?attr/colorTextPrimary"
                        android:textSize="14sp"
                        tools:text="ADAUSDT"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/entry_price"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/entry_price"
                        android:textColor="?attr/colorTextSecondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/entry_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="?attr/colorTextPrimary"
                        android:textSize="14sp"
                        tools:text="123.012345678 USDT"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/mark_price"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/mark_price"
                        android:textColor="?attr/colorTextSecondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/mark_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="?attr/colorTextPrimary"
                        android:textSize="14sp"
                        tools:text="123.012345678 USDT"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/price"
                        android:textColor="?attr/colorTextSecondary"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/type"
                        android:textColor="?attr/colorTextSecondary"
                        android:textSize="12sp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height">

                    <RelativeLayout
                        android:id="@+id/group_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/group_type">

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:textColor="?attr/colorTextPrimary"
                            android:textColorHint="?attr/colorTextPrimary"
                            android:textSize="16sp"
                            tools:text="10.235"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/price"
                            android:alpha="0.4"
                            android:gravity="center"
                            android:text="USDT"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="16sp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:alpha="0.2"
                            android:background="?attr/colorTextPrimary"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/group_market"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/group_type"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:text="@string/market"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="16sp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/group_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:background="?attr/colorCard"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="12sp"
                            tools:text="Market"/>

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dropdown_icon"/>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/amount"
                    android:textColor="?attr/colorTextSecondary"
                    android:textSize="12sp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_input_height">

                    <RelativeLayout
                        android:id="@+id/group_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:textColor="?attr/colorTextPrimary"
                            android:textColorHint="?attr/colorTextPrimary"
                            android:textSize="16sp"
                            tools:text="10.235"/>

                        <TextView
                            android:id="@+id/asset"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/amount"
                            android:alpha="0.4"
                            android:gravity="center"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="16sp"
                            tools:text="ADA"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:alpha="0.2"
                            android:background="?attr/colorTextPrimary"/>

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp">

                    <vision.genesis.clientapp.ui.PrimaryButton
                        android:id="@+id/button_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/confirm"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>