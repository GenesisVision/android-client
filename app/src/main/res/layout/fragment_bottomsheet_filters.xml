<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_bottomsheet_filters_height"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_bottomsheet_filters_height">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/text_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/filters"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_primary_frame">

                <TextView
                    android:id="@+id/button_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/reset"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/delimeter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header"
            android:background="@color/grey300"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttons_group"
            android:layout_below="@+id/delimeter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <vision.genesis.clientapp.feature.main.filters_sorting.FilterOptionView
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"/>

                <vision.genesis.clientapp.feature.main.filters_sorting.FilterOptionView
                    android:id="@+id/avg_profit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"/>

                <vision.genesis.clientapp.feature.main.filters_sorting.FilterOptionView
                    android:id="@+id/total_profit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"/>

                <vision.genesis.clientapp.feature.main.filters_sorting.FilterOptionView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"/>

                <vision.genesis.clientapp.feature.main.filters_sorting.FilterSwitchView
                    android:id="@+id/active_programs_only"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"/>

                <vision.genesis.clientapp.feature.main.filters_sorting.FilterSwitchView
                    android:id="@+id/available_to_invest_only"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:visibility="gone"/>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/buttons_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/button_apply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_square_primary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/apply"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey200">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/close"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>