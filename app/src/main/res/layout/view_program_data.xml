<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/item_investment_program_footer_group">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_total_profit_text"
                style="@style/item_investment_program_footer_text"
                tools:text="$78.3"/>

            <TextView
                android:id="@+id/text_total_profit_text_mod"
                style="@style/item_investment_program_footer_text"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                android:textSize="12sp"
                tools:text="K"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_total_profit_title"
            style="@style/item_investment_program_footer_title"
            android:text="@string/total_profit"/>

    </LinearLayout>

    <LinearLayout
        style="@style/item_investment_program_footer_group">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_avg_profit_text"
                style="@style/item_investment_program_footer_text"
                tools:text="50"/>

            <TextView
                android:id="@+id/text_avg_profit_text_percent"
                style="@style/item_investment_program_footer_text"
                android:layout_gravity="bottom"
                android:paddingBottom="2dp"
                android:text="%"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_avg_profit_title"
            style="@style/item_investment_program_footer_title"
            android:text="@string/avg_profit"/>

    </LinearLayout>

    <LinearLayout
        style="@style/item_investment_program_footer_group">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_balance_text"
                style="@style/item_investment_program_footer_text"
                tools:text="$23.1"/>

            <TextView
                android:id="@+id/text_balance_text_mod"
                style="@style/item_investment_program_footer_text"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                android:textSize="12sp"
                tools:text="K"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_balance_title"
            style="@style/item_investment_program_footer_title"
            android:text="@string/balance"/>

    </LinearLayout>

    <LinearLayout
        style="@style/item_investment_program_footer_group">

        <TextView
            android:id="@+id/text_period_text"
            style="@style/item_investment_program_footer_text"
            tools:text="2"/>

        <TextView
            android:id="@+id/text_period_title"
            style="@style/item_investment_program_footer_title"
            android:text="@string/period"/>

    </LinearLayout>

</LinearLayout>