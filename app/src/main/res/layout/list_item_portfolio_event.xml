<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/portfolio_event_item_height"
                android:paddingLeft="32dp"
                android:paddingRight="64dp">

    <RelativeLayout
        android:id="@+id/group_icons"
        android:layout_width="80dp"
        android:layout_height="match_parent">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/group_icons"
        android:layout_toRightOf="@+id/group_icons"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorTextSecondary"
            android:textSize="12sp"
            tools:text="20 minutes ago"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="14sp"
            tools:text="BlockChainTrader invest request added"/>

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:textColor="?attr/colorGreen"
            android:textSize="14sp"
            tools:text="+42.1294 GVT"/>

    </RelativeLayout>

</RelativeLayout>