<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height">

    <ImageView
        android:id="@+id/button_left"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="22dp"
        android:tint="@color/colorAccent"
        android:visibility="gone"
        tools:src="@drawable/back_arrow"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorMedium"
            android:textSize="19sp"
            tools:text="Tournament"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-2dp"
            android:textColor="@color/colorFontMedium"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="723 participants"
            tools:visibility="visible"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/button_right_second"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_right"
        android:layout_toStartOf="@+id/button_right"
        android:background="?attr/selectableItemBackground"
        android:padding="18dp"
        android:tint="@color/colorAccent"
        android:visibility="gone"
        tools:src="@drawable/ic_search_black_24dp"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/button_right"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="22dp"
        android:tint="@color/colorAccent"
        android:visibility="gone"
        tools:src="@drawable/filters_icon"
        tools:visibility="visible"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button_right_dot"
        android:layout_width="@dimen/toolbar_dot_width"
        android:layout_height="@dimen/toolbar_dot_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:placeholderImage="@color/transactionRed"
        app:roundAsCircle="true"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/grey300"
        android:textSize="10sp"
        tools:text="0.0.2-alpha (18040401)"/>

</RelativeLayout>