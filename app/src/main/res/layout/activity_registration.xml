<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorBackground"
                android:fitsSystemWindows="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.4"
        android:background="@drawable/lines"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20dp"
            android:src="@drawable/icon_back"
            android:tint="?attr/colorTextPrimary"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sign_up"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:padding="14dp"
            android:text="@string/sign_in"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="14sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/group_bottom"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/sign_in_padding"
                android:paddingRight="@dimen/sign_in_padding">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/login_logo_width"
                    android:layout_height="@dimen/login_logo_height"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_green_white"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_field_height"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:textColorHint="?attr/colorTextSecondary">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email"
                        style="@style/edittext"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_field_height"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:textColorHint="?attr/colorTextSecondary">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password"
                        style="@style/edittext"
                        android:hint="@string/password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/confirm_password_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_field_height"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:textColorHint="?attr/colorTextSecondary">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/confirm_password"
                        style="@style/edittext"
                        android:hint="@string/confirm_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"/>

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_field_height"
                    android:layout_marginTop="16dp">

                    <CheckBox
                        android:id="@+id/checkbox_agree_terms_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/login_field_height"
                        android:gravity="center_vertical"
                        android:text="@string/i_agree_to_the"
                        android:textColor="?attr/colorTextPrimary"/>

                    <TextView
                        android:id="@+id/privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/checkbox_agree_terms_policy"
                        android:layout_toRightOf="@+id/checkbox_agree_terms_policy"
                        android:gravity="center_vertical"
                        android:text="@string/privacy_policy"
                        android:textColor="?attr/colorAccent"/>

                </RelativeLayout>

                <CheckBox
                    android:id="@+id/checkbox_confirm_not_us"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_field_height"
                    android:gravity="center_vertical"
                    android:text="@string/i_confirm_i_am_not_us_resident_or_citizen"
                    android:textColor="?attr/colorTextPrimary"/>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/group_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/sign_in_padding"
            tools:visibility="visible">

            <vision.genesis.clientapp.ui.PrimaryButton
                android:id="@+id/button_sign_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_primary"
                android:enabled="false"
                android:text="@string/sign_up"/>

            <FrameLayout
                android:id="@+id/group_progressbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>