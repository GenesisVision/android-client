<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20dp"
            android:src="@drawable/icon_back"
            android:tint="?attr/colorTextPrimary"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/change_password"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/settings_padding"
            android:paddingRight="@dimen/settings_padding">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/old_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_field_height"
                android:gravity="bottom"
                android:textColorHint="?attr/colorTextSecondary">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/old_password"
                    style="@style/edittext"
                    android:hint="@string/old_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_field_height"
                android:layout_marginTop="30dp"
                android:gravity="bottom"
                android:textColorHint="?attr/colorTextSecondary">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/new_password"
                    style="@style/edittext"
                    android:hint="@string/new_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/repeat_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_field_height"
                android:layout_marginTop="30dp"
                android:gravity="bottom"
                android:textColorHint="?attr/colorTextSecondary">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/repeat_password"
                    style="@style/edittext"
                    android:hint="@string/repeat_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/group_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/sign_in_padding"
            tools:visibility="visible">

            <vision.genesis.clientapp.ui.PrimaryButton
                android:id="@+id/button_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_primary"
                android:text="@string/change_password"/>

            <FrameLayout
                android:id="@+id/group_progressbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>