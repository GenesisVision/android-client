<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottomsheet">

        <View
            android:layout_width="45dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/line_bottomsheet"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorTextSecondary"
                android:textSize="12sp"
                tools:text="24 Sep 2018 15:00"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/entry"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/icon_red_arrow_up"/>

                <LinearLayout
                    android:id="@+id/group_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/entry"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_vertical"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="14sp"
                            tools:text="BTCUSDT"/>

                        <TextView
                            android:id="@+id/quote_asset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center_vertical"
                            android:textColor="?attr/colorTextSecondary"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:text="/USDT"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/side"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="?attr/colorRed"
                            android:textSize="12sp"
                            tools:text="@string/sell"/>

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="10sp"
                            tools:text="1.0000001 BTC"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/group_left"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/group_filled"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="10dp"
                        tools:visibility="visible">

                        <ProgressBar
                            android:id="@+id/filled_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circular_background_wallet_invested"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress_wallet_invested"
                            tools:max="100"
                            tools:min="1"
                            tools:progress="25"/>

                        <TextView
                            android:id="@+id/filled_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="12sp"
                            tools:text="25%"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.5"
                android:background="?attr/colorDelimiterLight"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/type"/>

                    <TextView
                        android:id="@+id/type"
                        style="@style/open_position_details_value"
                        tools:text="Limit"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/status"/>

                    <TextView
                        android:id="@+id/status"
                        style="@style/open_position_details_value"
                        tools:text="Filled"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/price"/>

                    <TextView
                        android:id="@+id/price"
                        style="@style/open_position_details_value"
                        tools:text="3729.56"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/stop"/>

                    <TextView
                        android:id="@+id/stop"
                        style="@style/open_position_details_value"
                        tools:text="42000.12"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/amount"/>

                    <TextView
                        android:id="@+id/amount"
                        style="@style/open_position_details_value"
                        tools:text="1.0000001"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/executed"/>

                    <TextView
                        android:id="@+id/executed"
                        style="@style/open_position_details_value"
                        tools:text="1.0000001"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/group_swap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/open_position_details_label"
                        android:text="@string/commission"/>

                    <TextView
                        android:id="@+id/fee"
                        style="@style/open_position_details_value"
                        tools:text="-0.69"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>