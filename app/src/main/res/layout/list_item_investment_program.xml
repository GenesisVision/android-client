<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_investment_program_height"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

    <LinearLayout
        android:id="@+id/group_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_investment_program_header_height"
            android:paddingEnd="28dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingStart="28dp">

            <vision.genesis.clientapp.ui.AvatarView
                android:id="@+id/avatar"
                android:layout_width="@dimen/manager_avatar_width"
                android:layout_height="@dimen/manager_avatar_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/avatar"
                android:layout_toRightOf="@+id/avatar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Super program"/>

            <TextView
                android:id="@+id/currency"
                style="@style/item_investment_program_currency"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:text="BTC"/>

        </RelativeLayout>

        <vision.genesis.clientapp.ui.ProfitChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_investment_program_graph_height"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_investment_program_footer_height"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/item_investment_program_footer_group">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_total_profit_text"
                        style="@style/item_investment_program_footer_text"
                        tools:text="$78.3"/>

                    <TextView
                        android:id="@+id/text_total_profit_text_mod"
                        style="@style/item_investment_program_footer_text"
                        android:layout_gravity="bottom"
                        android:paddingBottom="3dp"
                        android:textSize="12sp"
                        tools:text="K"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_total_profit_title"
                    style="@style/item_investment_program_footer_title"
                    android:text="@string/total_profit"/>

            </LinearLayout>

            <LinearLayout
                style="@style/item_investment_program_footer_group">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_avg_profit_text"
                        style="@style/item_investment_program_footer_text"
                        tools:text="50"/>

                    <TextView
                        android:id="@+id/text_avg_profit_text_percent"
                        style="@style/item_investment_program_footer_text"
                        android:layout_gravity="bottom"
                        android:paddingBottom="2dp"
                        android:text="%"
                        android:textSize="12sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_avg_profit_title"
                    style="@style/item_investment_program_footer_title"
                    android:text="@string/avg_profit"/>

            </LinearLayout>

            <LinearLayout
                style="@style/item_investment_program_footer_group">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_balance_text"
                        style="@style/item_investment_program_footer_text"
                        tools:text="$23.1"/>

                    <TextView
                        android:id="@+id/text_balance_text_mod"
                        style="@style/item_investment_program_footer_text"
                        android:layout_gravity="bottom"
                        android:paddingBottom="3dp"
                        android:textSize="12sp"
                        tools:text="K"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_balance_title"
                    style="@style/item_investment_program_footer_title"
                    android:text="@string/balance"/>

            </LinearLayout>

            <LinearLayout
                style="@style/item_investment_program_footer_group">

                <TextView
                    android:id="@+id/text_period_text"
                    style="@style/item_investment_program_footer_text"
                    tools:text="2"/>

                <TextView
                    android:id="@+id/text_period_title"
                    style="@style/item_investment_program_footer_title"
                    android:text="@string/period"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>