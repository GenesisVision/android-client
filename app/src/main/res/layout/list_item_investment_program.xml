<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/group_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_investment_program_height"
        android:layout_gravity="center"
        android:background="@drawable/program_list_item_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="8dp"
            android:paddingStart="6dp">

            <vision.genesis.clientapp.ui.AvatarView
                android:id="@+id/avatar"
                android:layout_width="@dimen/manager_avatar_width"
                android:layout_height="@dimen/manager_avatar_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/icon_favorite"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/manager_avatar_width"
                android:layout_marginStart="@dimen/manager_avatar_width"
                android:background="@drawable/circle_white"
                android:padding="1dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/gold"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/avatar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/avatar"
                android:layout_toLeftOf="@+id/chart"
                android:layout_toRightOf="@+id/avatar"
                android:layout_toStartOf="@+id/chart"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    tools:text="Super program"/>

                <TextView
                    android:id="@+id/manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    tools:text="by Warren Buffett"/>

            </LinearLayout>

            <vision.genesis.clientapp.ui.chart.ProfitSmallChartView
                android:id="@+id/chart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"/>

        </RelativeLayout>

        <vision.genesis.clientapp.ui.ProgramDataView
            android:id="@+id/view_program_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_investment_program_footer_height"
            android:layout_marginTop="16dp"/>

        <vision.genesis.clientapp.ui.AvailableTokensView
            android:id="@+id/view_available_tokens"
            android:layout_width="@dimen/available_tokens_view_width"
            android:layout_height="@dimen/available_tokens_view_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/group_data"
        android:background="@drawable/shadow_down_black"/>

</RelativeLayout>