<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_investment_program_height"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:background="@drawable/program_list_item_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="0dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:paddingStart="6dp">

        <vision.genesis.clientapp.ui.AvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/manager_avatar_width"
            android:layout_height="@dimen/manager_avatar_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/icon_favorite"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/manager_avatar_width"
            android:layout_marginStart="@dimen/manager_avatar_width"
            android:background="@drawable/circle_white"
            android:padding="1dp"
            android:src="@drawable/ic_star_black_24dp"
            android:tint="?attr/colorTextSecondary"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toLeftOf="@+id/chart"
            android:layout_toRightOf="@+id/avatar"
            android:layout_toStartOf="@+id/chart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="18sp"
                tools:text="Super program"/>

            <TextView
                android:id="@+id/manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorTextSecondary"
                android:textSize="16sp"
                tools:text="by Warren Buffett"/>

        </LinearLayout>

        <vision.genesis.clientapp.ui.chart.ProfitSmallChartView
            android:id="@+id/chart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"/>

    </RelativeLayout>

    <vision.genesis.clientapp.ui.ProgramDataView
        android:id="@+id/view_program_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_program_data"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/text_free_tokens"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_program_data_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:textColor="@color/colorMedium"
            android:textSize="20sp"
            tools:text="174.3987"/>

        <TextView
            android:id="@+id/text_free_tokens_title"
            style="@style/item_investment_program_footer_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_free_tokens"
            android:layout_marginTop="@dimen/item_program_title_margin"
            android:text="@string/free_tokens"/>

    </RelativeLayout>

</RelativeLayout>