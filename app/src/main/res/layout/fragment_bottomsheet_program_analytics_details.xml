<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottomsheet"
        android:orientation="vertical">

        <View
            android:layout_width="45dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/line_bottomsheet"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_start_label"
                        style="@style/text_label_period_details"
                        android:text="@string/date_start"/>

                    <TextView
                        android:id="@+id/period_length_label"
                        style="@style/text_label_period_details"
                        android:text="@string/period_length"/>

                    <TextView
                        android:id="@+id/investors_label"
                        style="@style/text_label_period_details"
                        android:text="@string/investors_max"/>

                    <TextView
                        android:id="@+id/balance_label"
                        style="@style/text_label_period_details"
                        android:text="@string/program_balance"/>

                    <TextView
                        android:id="@+id/profit_label"
                        style="@style/text_label_period_details"
                        android:text="@string/profit"/>

                    <TextView
                        android:id="@+id/investors_invest_label"
                        style="@style/text_label_period_details"
                        android:text="@string/investors_invest"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/investors_withdrawal_label"
                        style="@style/text_label_period_details"
                        android:text="@string/investors_withdrawal"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/manager_investment_label"
                        style="@style/text_label_period_details"
                        android:text="@string/manager_investment"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/manager_withdrawal_label"
                        style="@style/text_label_period_details"
                        android:text="@string/manager_withdrawal"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_start"
                        style="@style/text_value_period_details"
                        tools:text="03 Jul 2019, 04:54pm"/>

                    <TextView
                        android:id="@+id/period_length"
                        style="@style/text_value_period_details"
                        tools:text="30d"/>

                    <TextView
                        android:id="@+id/investors"
                        style="@style/text_value_period_details"
                        tools:text="164"/>

                    <TextView
                        android:id="@+id/balance"
                        style="@style/text_value_period_details"
                        tools:text="235k GVT"/>

                    <TextView
                        android:id="@+id/profit"
                        style="@style/text_value_period_details"
                        tools:text="12k GVT"/>

                    <TextView
                        android:id="@+id/investors_invest"
                        style="@style/text_value_period_details"
                        android:visibility="gone"
                        tools:text="12k GVT"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/investors_withdrawal"
                        style="@style/text_value_period_details"
                        android:visibility="gone"
                        tools:text="12k GVT"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/manager_investment"
                        style="@style/text_value_period_details"
                        android:visibility="gone"
                        tools:text="12k GVT"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/manager_withdrawal"
                        style="@style/text_value_period_details"
                        android:visibility="gone"
                        tools:text="12k GVT"
                        tools:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>