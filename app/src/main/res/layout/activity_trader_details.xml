<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <vision.genesis.clientapp.ui.AvatarView
                android:id="@+id/program_logo"
                android:layout_width="@dimen/trader_details_avatar_width"
                android:layout_height="@dimen/trader_details_avatar_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/program_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorFontDark"
                android:textSize="20sp"
                tools:text="Super program"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:ellipsize="end"
                android:maxHeight="@dimen/trader_details_description_height"
                android:textColor="@color/colorFontMedium"
                android:textSize="14sp"
                tools:text="@string/lorem_ipsum"/>

            <vision.genesis.clientapp.ui.ProfitChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/text_description"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"/>

            <LinearLayout
                android:id="@+id/group_footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_investment_program_footer_height"
                android:layout_below="@+id/chart"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/item_investment_program_footer_group">

                    <TextView
                        android:id="@+id/text_deposit_text"
                        style="@style/item_investment_program_footer_text"
                        android:ellipsize="end"
                        android:lines="1"
                        tools:text="1.25030569"/>

                    <TextView
                        android:id="@+id/text_deposit_title"
                        style="@style/item_investment_program_footer_title"
                        android:text="@string/deposit"/>

                </LinearLayout>

                <View style="@style/item_investment_program_footer_divider"/>

                <LinearLayout
                    style="@style/item_investment_program_footer_group">

                    <TextView
                        android:id="@+id/text_trades_text"
                        style="@style/item_investment_program_footer_text"
                        tools:text="12"/>

                    <TextView
                        android:id="@+id/text_trades_title"
                        style="@style/item_investment_program_footer_title"
                        android:text="@string/trades"/>

                </LinearLayout>

                <View style="@style/item_investment_program_footer_divider"/>

                <LinearLayout
                    style="@style/item_investment_program_footer_group">

                    <TextView
                        android:id="@+id/text_period_text"
                        style="@style/item_investment_program_footer_text"
                        tools:text="2"/>

                    <TextView
                        android:id="@+id/text_period_title"
                        style="@style/item_investment_program_footer_title"
                        android:text="@string/period"/>

                </LinearLayout>

                <View style="@style/item_investment_program_footer_divider"/>

                <LinearLayout
                    style="@style/item_investment_program_footer_group">

                    <TextView
                        android:id="@+id/text_profit_text"
                        style="@style/item_investment_program_footer_text"
                        android:textColor="@color/colorPrimary"
                        tools:text="22%"/>

                    <TextView
                        android:id="@+id/text_profit_title"
                        style="@style/item_investment_program_footer_title"
                        android:text="@string/profit"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_footer"
                android:layout_margin="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/group_period_ends"
                        android:layout_toStartOf="@+id/group_period_ends"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_ends_at"
                            android:textColor="@color/colorFontMedium"
                            android:textSize="14sp"
                            tools:text="The period ends at"/>

                        <TextView
                            android:id="@+id/text_end_of_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_ends_at"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            tools:text="20.03.2018 03:43 AM (UTC+3)"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_period_ends"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_period_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorFontDark"
                            android:textSize="28sp"
                            tools:text="6"/>

                        <TextView
                            android:id="@+id/text_period_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorFontDark"
                            android:textSize="12sp"
                            tools:text="days left"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_success_fee"
                        android:layout_toStartOf="@+id/text_success_fee"
                        android:text="@string/success_fee"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_success_fee"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/text_success_fee_percent"
                        android:layout_toStartOf="@+id/text_success_fee_percent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="10.0"/>

                    <TextView
                        android:id="@+id/text_success_fee_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_management_fee"
                        android:layout_toStartOf="@+id/text_management_fee"
                        android:text="@string/management_fee"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_management_fee"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/text_management_fee_percent"
                        android:layout_toStartOf="@+id/text_management_fee_percent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="10.0"/>

                    <TextView
                        android:id="@+id/text_management_fee_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_investors_count"
                        android:layout_toStartOf="@+id/text_investors_count"
                        android:text="@string/investors"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_investors_count"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/image_investors"
                        android:layout_toStartOf="@+id/image_investors"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="23"/>

                    <ImageView
                        android:id="@+id/image_investors"
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/colorPrimaryDark"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_available_to_invest"
                        android:layout_toStartOf="@+id/text_available_to_invest"
                        android:text="@string/available_to_invest"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_available_to_invest"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_available_currency"
                        android:layout_toStartOf="@+id/text_available_currency"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="532.24"/>

                    <TextView
                        android:id="@+id/text_available_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="USD"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/program_buttons_height"
                android:layout_below="@+id/group_data"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/button_invest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary"
                    android:maxWidth="200dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/invest"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary"
                    android:maxWidth="200dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/withdraw"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <vision.genesis.clientapp.ui.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>