<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorBackground"
                android:fitsSystemWindows="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBackground"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorBackground"
                android:fitsSystemWindows="true"
                app:elevation="0dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/toolbar_height"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:layout_collapseMode="parallax">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/program_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/example_logo"
                            app:placeholderImageScaleType="centerCrop"/>
                        <!--app:placeholderImage="?attr/colorBackground"/>-->

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="184dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitEnd"
                            android:src="@drawable/details_level_background"/>

                        <TextView
                            android:id="@+id/level"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/circle_white"
                            android:backgroundTint="@color/accent"
                            android:gravity="center"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="16sp"
                            tools:text="7"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/shadow_up_card_light"
                        android:orientation="vertical"
                        android:padding="@dimen/program_details_padding_left"
                        app:layout_collapseMode="pin">

                        <TextView
                            android:id="@+id/program_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="26sp"
                            tools:text="Intellectual Ventures"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/collapsing_toolbar_screen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0"
                        android:background="?attr/colorCard"/>

                </android.support.design.widget.CollapsingToolbarLayout>


                <RelativeLayout
                    android:id="@+id/group_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:background="?attr/colorCard"
                    android:paddingLeft="@dimen/program_details_padding_left"
                    android:paddingStart="@dimen/program_details_padding_left"
                    android:visibility="gone"
                    app:layout_collapseMode="pin"
                    tools:visibility="visible">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tabs_height"
                        android:layout_alignParentBottom="true"
                        android:minHeight="?attr/actionBarSize"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="?attr/colorAccent"
                        app:tabMaxWidth="0dp"
                        app:tabMode="scrollable"
                        app:tabSelectedTextColor="?attr/colorTextPrimary"
                        app:tabTextColor="?attr/colorTextSecondary"/>

                </RelativeLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_program_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:visibility="visible"/>

        </android.support.design.widget.CoordinatorLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/icon_back"
            android:tint="?attr/colorTextPrimary"/>

        <vision.genesis.clientapp.ui.AvatarView
            android:id="@+id/toolbar_program_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/button_back"
            android:layout_toRightOf="@+id/button_back"
            android:alpha="0"/>

        <TextView
            android:id="@+id/toolbar_program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/toolbar_program_logo"
            android:layout_toLeftOf="@+id/group_toolbar_buttons"
            android:layout_toRightOf="@+id/toolbar_program_logo"
            android:layout_toStartOf="@+id/group_toolbar_buttons"
            android:alpha="0"
            android:ellipsize="end"
            android:maxLines="1"
            android:orientation="vertical"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="18sp"
            tools:text="Super mega profit program"/>

        <LinearLayout
            android:id="@+id/group_toolbar_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_notifications"
                android:layout_width="50dp"
                android:layout_height="@dimen/toolbar_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:src="@drawable/icon_notifications"
                android:tint="?attr/colorTextPrimary"
                android:visibility="visible"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/button_favorite"
                android:layout_width="50dp"
                android:layout_height="@dimen/toolbar_height"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/icon_favorite"
                android:tint="?attr/colorTextPrimary"
                android:visibility="invisible"
                tools:visibility="visible"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/group_no_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_internet_image"
            android:layout_width="@dimen/programs_no_internet_image_width"
            android:layout_height="@dimen/programs_no_internet_image_height"
            android:src="@drawable/no_internet"
            android:tint="@color/colorFontLight"/>

        <TextView
            android:id="@+id/no_internet_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/network_error"
            android:textColor="@color/black12"
            android:textSize="18sp"/>

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <vision.genesis.clientapp.ui.PrimaryButton
                android:id="@+id/button_try_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/try_again"/>

            <ProgressBar
                android:id="@+id/progress_bar_no_internet"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:indeterminate="true"
        android:scaleY="4"
        android:visibility="visible"/>


</RelativeLayout>