<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/group_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrayBackground">

                <RelativeLayout
                    android:id="@+id/group_program_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp">

                    <vision.genesis.clientapp.ui.AvatarView
                        android:id="@+id/program_logo"
                        android:layout_width="@dimen/program_details_avatar_width"
                        android:layout_height="@dimen/program_details_avatar_height"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/image_read_more"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/read_more"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_program_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    tools:text="Super program"/>

                <TextView
                    android:id="@+id/manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:text="by Warren Buffett"/>

                <vision.genesis.clientapp.ui.ProfitChartView
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/manager_name"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"/>

                <vision.genesis.clientapp.ui.ProgramDataView
                    android:id="@+id/view_program_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_investment_program_footer_height"
                    android:layout_below="@+id/chart"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/group_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_header"
                android:layout_margin="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/view_period_left"
                        android:layout_toStartOf="@+id/view_period_left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_ends_at"
                            android:textColor="@color/colorFontMedium"
                            android:textSize="14sp"
                            tools:text="The period ends at"/>

                        <TextView
                            android:id="@+id/text_end_of_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period_ends_at"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            tools:text="20.03.2018 03:43 AM (UTC+3)"/>

                    </LinearLayout>

                    <vision.genesis.clientapp.ui.PeriodLeftView
                        android:id="@+id/view_period_left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_success_fee"
                        android:layout_toStartOf="@+id/text_success_fee"
                        android:text="@string/success_fee"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_success_fee"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/text_success_fee_percent"
                        android:layout_toStartOf="@+id/text_success_fee_percent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="10.0"/>

                    <TextView
                        android:id="@+id/text_success_fee_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_management_fee"
                        android:layout_toStartOf="@+id/text_management_fee"
                        android:text="@string/management_fee"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_management_fee"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/text_management_fee_percent"
                        android:layout_toStartOf="@+id/text_management_fee_percent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="10.0"/>

                    <TextView
                        android:id="@+id/text_management_fee_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="%"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_investors_count"
                        android:layout_toStartOf="@+id/text_investors_count"
                        android:text="@string/investors"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_investors_count"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/image_investors"
                        android:layout_toStartOf="@+id/image_investors"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="23"/>

                    <ImageView
                        android:id="@+id/image_investors"
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/colorPrimaryDark"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/group_you_have"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_you_have"
                        android:layout_toStartOf="@+id/text_you_have"
                        android:text="@string/you_have"
                        android:textColor="@color/colorFontMedium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/text_you_have"
                        style="@style/item_investment_program_footer_text"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/text_you_have_tokens"
                        android:layout_toStartOf="@+id/text_you_have_tokens"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:text="532.24"/>

                    <TextView
                        android:id="@+id/text_you_have_tokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/tokens"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/program_buttons_height"
                android:layout_below="@+id/group_data"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:orientation="horizontal">

                <vision.genesis.clientapp.ui.PrimaryButton
                    android:id="@+id/button_invest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:maxWidth="200dp"
                    android:text="@string/invest"/>

                <vision.genesis.clientapp.ui.PrimaryButton
                    android:id="@+id/button_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:maxWidth="200dp"
                    android:text="@string/withdraw"/>

                <vision.genesis.clientapp.ui.PrimaryButton
                    android:id="@+id/button_requests"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:maxWidth="200dp"
                    android:text="@string/requests"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <vision.genesis.clientapp.ui.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayBackground"/>

</RelativeLayout>