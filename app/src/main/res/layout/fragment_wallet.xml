<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="@dimen/wallet_image_width"
        android:layout_height="@dimen/wallet_image_height"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_primary"
        android:padding="32dp"
        android:src="@drawable/wallet"
        android:tint="@color/white"/>

    <TextView
        android:id="@+id/text_you_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/you_have"
        android:textColor="@color/colorFontMedium"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/group_balance_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_balance_group_height"
        android:layout_below="@+id/text_you_have"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp">

        <ProgressBar
            android:id="@+id/balance_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/group_balance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorFontDark"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="@string/gvt"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/group_balance_progress"
        android:layout_marginTop="16dp"
        android:background="@color/colorGrayDivider"/>

    <TextView
        android:id="@+id/transactions_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:background="@color/colorGrayDivider"
        android:gravity="center"
        android:text="@string/transactions"
        android:textColor="@color/colorFontDark"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/transactions_label">

        <LinearLayout
            android:id="@+id/group_no_transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_money_off_black_24dp"
                android:tint="@color/colorFontMedium"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="@string/you_have_no_transactions_yet"
                android:textColor="@color/colorFontMedium"
                android:textSize="18sp"/>

        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v4.widget.SwipeRefreshLayout>

    </FrameLayout>

    <vision.genesis.clientapp.ui.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>