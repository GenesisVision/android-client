<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_trades_height"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/program_details_padding">

    <RelativeLayout
        android:id="@+id/group_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/entry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/icon_red_arrow_up"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:roundAsCircle="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/group_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/group_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="16sp"
            tools:text="BTCUSD"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:alpha="0.3"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="14sp"
                tools:text="@string/sell"/>

            <TextView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:textColor="?attr/colorTextPrimary"
                android:textSize="14sp"
                tools:text="1.0"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:alpha="0.3"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="24 Sep 2018 15:00"/>

    <LinearLayout
        android:id="@+id/group_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/program_details_padding"
        android:layout_toEndOf="@+id/group_left"
        android:gravity="center_vertical|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="16sp"
            tools:text="120.2301"/>

        <TextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorGreen"
            android:textSize="14sp"
            tools:text="1.23"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="?attr/colorDelimiterLight"/>

</RelativeLayout>